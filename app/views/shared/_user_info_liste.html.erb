<div class="user_info">
	<%= gravatar_pour @user, :size => 30 %> 
	<span class="user_name">
		<strong> <%= @user.nom %></strong> <br />
    </span>
    <span class="user_name">
	<!-- <strong> <%= @user.email%></strong> <br /> -->
	</span>
    <span class="user_name">
		<!-- <strong>Microposts</strong> <%= @user.microposts.count %> -->
		<%# if current_user == @user %> 
			<a href="<%= messages_path(current_user) %>">
				<span id="messages" class="stat">
					<% if (current_user.messages.count + current_user.recipients.count) < 2 %>
						<%= pluralize(current_user.messages.count + current_user.recipients.count   , "Message recu", "Message recu") %>
					<% else %>
						<%= pluralize(current_user.messages.count + current_user.recipients.count   , "Message recu", "Messages recus") %>
					<% end %>
				</span>
			</a>
		<%# end %> 
    </span>
</div>