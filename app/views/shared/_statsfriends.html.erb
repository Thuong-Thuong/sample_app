<div class="stats">
	<table summary="User stats">
		<tr>
			<td>
				<a href="<%= friends_user_path(current_user) %>">
					<span id="friends" class="stat">
						<% if (current_user.friends.where('friendships.status'=> 1).count + current_user.invitations.where('friendships.status'=> 1).count) < 2 %>
						<%= pluralize(current_user.friends.where('friendships.status'=> 1).count + current_user.invitations.where('friendships.status'=> 1).count , "ami", "ami" )%> 
						<% else %>
							<%= pluralize(current_user.friends.where('friendships.status'=> 1).count + current_user.invitations.where('friendships.status'=> 1).count , "ami") %> 
						<% end %>
					</span>
				</a>
			</td>
			<td>
				<a href="<%= invitations_user_path(current_user) %>">
					<span id="invitations" class="stat">
						<% if (current_user.invitations.where('friendships.status'=> 0).count) < 2 %>
							<%= pluralize(current_user.invitations.where('friendships.status'=> 0).count, "invitation","invitation") %>
						<% else %>
							<%= pluralize(current_user.invitations.where('friendships.status'=> 0).count, "invitation") %>
						<% end %>
					</span>
				</a>
			</td>
			<td>
				<a href="<%= invites_user_path(current_user) %>">
					<span id="invites" class="stat">
						<% if (current_user.friends.where('friendships.status'=> 0).count) < 2 %>
							<%= pluralize(current_user.friends.where('friendships.status'=> 0).count, "invite", "invite") %>
						<% else %>
							<%= pluralize(current_user.friends.where('friendships.status'=> 0).count, "invite") %>
						<% end %>
					</span>
				</a>
			</td>

		</tr>
	</table>
</div>