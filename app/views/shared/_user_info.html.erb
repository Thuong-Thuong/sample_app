<div class="user_info">
	<a href="<%= user_path(current_user) %>">
		<%= gravatar_pour current_user, :size => 50  %>
		<span class="user_name">
			<strong> <%= current_user.nom %></strong> <br />
		</span>
			<span class="user_name">
			<strong> <%#= current_user.email%></strong>
		</span>
		<span class="user_name">
			<!--<strong>Microposts</strong> <%= current_user.microposts.count %> -->
			 <%# if current_user == @user %> 
			<a href="<%= messages_path(current_user) %>">
				<span id="messages" class="stat" >
					<% $iprofil = 1 %>
					<%= pluralize(current_user.messages.count , "Message recu", "Messages recus" ) %>
				</span>
			</a>
			<%# end %> 
		</span>
	</a>
</div>