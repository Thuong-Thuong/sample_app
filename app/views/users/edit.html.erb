<div>
	<%= gravatar_pour @user %>
	<%= link_to "changer", "http://gravatar.com/emails" , :class => 'buttons' %>
</div>
<h2>Edition profil</h2>
<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :nom, "Nom" %><br />
		<%= f.text_field :nom %>
	</div>
	<div class="field">
		<%= f.label :email, "Email" %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :pro, "Vous etes professionnel ?" %>
		<%= f.check_box :pro %>
	</div>
	<div class="field">
		<%= f.label :password, "Password" %><br />
		<%= f.password_field :password  %>
	</div>
	<div class="field">
		<%= f.label :password_confirmation, "Confirmation" %><br />
		<%= f.password_field :password_confirmation %>
	</div>
	<div class="field">
		<%= f.label :datenaissance, "Date de naissance" %><br />
		<%= f.date_field :datenaissance %>
	</div>
	<div class="field">
		<%= f.label :sexe, "Sexe" %><br />
		<%= f.select :sexe, options_for_select(["M","F"]),  :selected => @sexe  %>
	</div>
	<div class="field">
		<%= f.label :adresse, "Adresse" %><br />
		<%= f.text_field :adresse %>
	</div>
	<div class="field">
		<%= f.label :mobile, "Mobile" %><br />
		<%= f.text_field :mobile %>
	</div>
	<div class="field">
		<%= f.label :facebook, "Facebook" %><br />
		<%= f.text_field :facebook %>
	</div>
	<div class="field">
		<%= f.label :google, "Google" %><br />
		<%= f.text_field :google %>
	</div>
	<div class="field">
		<%= f.label :twiter, "Twiter" %><br />
		<%= f.text_field :twiter %>
	</div>
	<div class="field">
		<%= f.label :linkedin, "Linkedin" %><br />
		<%= f.text_field :linkedin %>
	</div>
	<div class="field">
		<%= f.label :petitmot, "Petit mot personnel" %><br />
		<%= f.text_area :petitmot %>
	</div>
	<div class="field">
		<%= f.label :interet, "Centre d'interet" %><br />
		<%= f.text_area :interet %>
	</div>
	<div class="field">
		<%= f.label :notifmail, "Notif par mail" %>
		<%= f.check_box:notifmail %>
	</div>
	<div class="field">
		<%= f.label :notifsms, "Notif par sms" %>
		<%= f.check_box:notifsms %>
	</div>
	<div class="actions", style="float=left;">
		<%= f.submit "Update", :class => 'round' %>
	</div>
<% end %>
