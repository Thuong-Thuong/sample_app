<h1>Edition profil</h1>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :nom, "Nom" %><br />
		<%= f.text_field :nom %>
	</div>
	<div class="field">
		<%= f.label :email, "Email" %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :pro, "Vous etes professionnel ?" %>
		<%= f.check_box :pro %>
	</div>
	
	
	<div class="field">
		<%= f.label :password, "Password" %><br />
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<%= f.label :password_confirmation, "Confirmation" %><br />
		<%= f.password_field :password_confirmation %>
	</div>
	<div class="actions">
		<%= f.submit "Update", :class => 'round' %>
	</div>
<% end %>

<div>
  <%= gravatar_pour @user %>
<%= link_to "changer", "http://gravatar.com/emails" , :class => 'buttons' %>
</div>