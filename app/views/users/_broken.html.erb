<% if $broken == 0 %>
<%= form_for @user.friendships.find_by_receiver_id(current_user), :html => { :method => :delete } do |f| %>
	<div class="actions">
		<%= f.submit "Broken", :class => 'buttons' %>
	</div>
<% end %>
<% else  %>
<%= form_for @user.friendships.find_by_sender_id(@user), :html => { :method => :delete } do |f| %>
	<div class="actions">
		<%= f.submit "Broken", :class => 'buttons' %>
	</div>
<% end %>
<% end %>