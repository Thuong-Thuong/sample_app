<!DOCTYPE html>
<% if signed_in? %>
	<table class="front" summary="Pour visiteur identifie">
		<tr>
			<h2>
				<%= gravatar_pour $avatar, :size => 30 %>
				<%= $nom  %> 
			</h2>
			<td class="main">
				<h3 class="Conversations">Conversations </h3>
				<%= render 'shared/conversation_form' %>
				<%#= render 'shared/feed_conversation' %>
			</td>
			<td class="sidebar round">
				<%= render 'shared/user_info' %>
				<%= render 'shared/statsfriends' %>
			</td>
		</tr>
	</table>
<% end %>