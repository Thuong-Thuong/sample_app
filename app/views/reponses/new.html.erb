<!DOCTYPE html>
<% if signed_in? %>
	<table class="front" summary="Pour visiteur identifie">
		<tr>
    		<h1>
				<%= gravatar_pour $even_user, :size => 50 %>
				<%= $evenement_titre  %> 
			</h1>
			<td class="Reponse">
				<h3><%= $comment.commentaire %> </h3>
				<%= $comment.reponses.count %> reponses
