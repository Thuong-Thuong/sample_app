<!DOCTYPE html>
<% if signed_in? %>
	<table class="front" summary="Pour visiteur identifie">
		<tr>
    		<h2>
				<%= gravatar_pour $even_user, :size => 30 %>
				<%= $evenement_titre  %> 
			</h2>
			<td class="Reponse">
				<%= gravatar_pour $comment_user, :size => 30 %>
				<strong><%= $comment.commentaire %> </strong> </br>
				<% if $comment.reponses.count < 2 %>
					<em><%= pluralize($comment.reponses.count, "reponse", "reponse") %> </em></br>
				<% else %>
					<em><%= pluralize($comment.reponses.count, "reponse") %> </em></br>
				<% end %>
				<%= Reponse %>
				<%= render "shared/reponse_form" %>
				<%= render 'shared/feed_reponse' %>
			</td>
			<td class="sidebar round">
				<%= render 'shared/user_info' %>
				<%= render 'shared/statsfriends' %>
			</td>
		</tr>
	</table>
<% end %>
