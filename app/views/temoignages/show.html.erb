<!DOCTYPE html>
<% if signed_in? %>
	<table class="front" summary="Pour visiteur identifie">
		<tr>
			<% if $user_pro == 1 %>
				<h2>
					<%= gravatar_pour $avatar, :size => 30 %>
					<%= $nom  %> | <em > Pro </em><br/>
					<% if !$avatar.siteinternet.nil? %>
						<em> <%= link_to $avatar.siteinternet, href="http://www.#{$avatar.siteinternet}" %> <em>
					<% end %>
				</h2>
			<% else %>
				<h2>
					<%= gravatar_pour $avatar, :size => 30 %>
					<%= $nom  %> 
				</h2>
			<% end %>
			<td class="main">
				<h3 class="Temoignages">Temoignage </h3>
				<% if !(current_user.id == $user) && $user_pro == 1 %>
					<%= render 'shared/temoignage_form' %>
				<% end %>
				<%= render 'shared/feed_temoignage' %>
			</td>
			<td class="sidebar round">
				<%= render 'shared/user_info' %>
				<%= render 'shared/statsfriends' %>
			</td>
		</tr>
	</table>
<% end %>