<% if signed_in? %>
	<table class="front" summary="Pour visiteur identifie">
		<tr>
			<h2>
				<% if $irep == 0 %>
					<%= gravatar_pour $avatar, :size => 30 %>
					<% if !$avatar.pro? %>
						<%= $avatar.nom  %> 
					<% else %>
						<%= $avatar.nom  %> | <em> Pro <em> <br/>
						<% if !$avatar.siteinternet.nil? %>
							<em> <%= link_to $avatar.siteinternet, href="http://www.#{$avatar.siteinternet}" %> <em>
						<% end %>
					<% end %>

				<% else %>
					<%= gravatar_pour $avatar1, :size => 30 %>
					<% if !$avatar1.pro? %>
						<%= $avatar1.nom  %> 
					<% else %>
						<%= $avatar1.nom  %> | <em> Pro <em> <br/>
						<% if !$avatar1.siteinternet.nil? %>
							<em> <%= link_to $avatar1.siteinternet, href="http://www.#{$avatar1.siteinternet}" %> <em>
						<% end %>
					<% end %>

				<% end %>
			</h2>
			<td class="main">
				<h3 class="Messages">Messages </h3> 
				<% if !(current_user.id == $user) || $irep == 1 %>
					<%= render 'shared/message_form' %>
				<% end %>
				<%= render 'shared/feed_message' %>
			</td>
			<td class="sidebar round">
				<%= render 'shared/user_info' %>
				<%= render 'shared/statsfriends' %>
			</td>
		</tr>
	</table>
<% end %>
