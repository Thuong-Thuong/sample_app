<% if signed_in? %>
	<table class="front" summary="Pour visiteur identifie">
		<tr>
			<h2>
				<% if ($irep == 1)  %>
					<%= gravatar_pour $avatar, :size => 30 %>
					<%= $avatar.nom  %> 
				<% elsif !(current_user.id == $user) && ($irep == 1) %>
					<% #$gravatar = User.find_by_id($message.sender_id) %> 
					<%= gravatar_pour $avatar1, :size => 30 %>
					<%= $avatar1.nom  %> 
				<% end %>
			</h2>
			<td class="main">
				<h4 class="Messages">Messages
				<% if (!(current_user.id == $user) && ($irep == 1)) || ($i_vide == 1) %>
					<% $i_vide = 0 %>
					<%= render 'shared/message_form' %>
				<% end %>
				<%= render 'shared/feed_message' %>
				<%= render 'shared/feed_conversation' %>
			</td>
			<td class="sidebar round">
				<%= render 'shared/user_info' %>
				<%= render 'shared/statsfriends' %>
			</td>
		</tr>
	</table>
<% end %>
